{
  "$schema": "https://json.schemastore.org/release.json",
  "name": "mbtquniverse",
  "version": "1.0.0",
  "description": "Release configuration for MBTQUniverse",
  
  "versioning": {
    "scheme": "semver",
    "tagPrefix": "v",
    "tagFormat": "v{version}",
    "bumpStrategy": "semantic"
  },

  "branches": {
    "main": {
      "name": "main",
      "prerelease": false,
      "channel": "latest"
    },
    "master": {
      "name": "master",
      "prerelease": false,
      "channel": "latest"
    },
    "develop": {
      "name": "develop",
      "prerelease": "beta",
      "channel": "beta"
    },
    "next": {
      "name": "next",
      "prerelease": "alpha",
      "channel": "alpha"
    }
  },

  "featureBranches": [
    {
      "pattern": "feat/*",
      "prerelease": "alpha"
    },
    {
      "pattern": "feat:*",
      "prerelease": "alpha"
    },
    {
      "pattern": "feature/*",
      "prerelease": "alpha"
    }
  ],

  "releaseBranches": [
    {
      "pattern": "release/*",
      "prerelease": "rc"
    }
  ],

  "hotfixBranches": [
    {
      "pattern": "hotfix/*",
      "prerelease": false,
      "channel": "latest"
    }
  ],

  "prerelease": {
    "alpha": {
      "description": "Alpha pre-release for early testing",
      "stability": "unstable",
      "tagFormat": "v{version}-alpha.{increment}"
    },
    "beta": {
      "description": "Beta pre-release for feature testing",
      "stability": "testing",
      "tagFormat": "v{version}-beta.{increment}"
    },
    "rc": {
      "description": "Release candidate for final testing",
      "stability": "stable",
      "tagFormat": "v{version}-rc.{increment}"
    }
  },

  "changelog": {
    "enabled": true,
    "file": "CHANGELOG.md",
    "format": "keepachangelog",
    "sections": [
      {
        "type": "feat",
        "section": "ğŸ‰ New Features",
        "hidden": false
      },
      {
        "type": "fix",
        "section": "ğŸ› Bug Fixes",
        "hidden": false
      },
      {
        "type": "perf",
        "section": "âš¡ Performance Improvements",
        "hidden": false
      },
      {
        "type": "refactor",
        "section": "â™»ï¸ Code Refactoring",
        "hidden": false
      },
      {
        "type": "docs",
        "section": "ğŸ“š Documentation",
        "hidden": false
      },
      {
        "type": "style",
        "section": "ğŸ¨ Styles",
        "hidden": false
      },
      {
        "type": "test",
        "section": "ğŸ§ª Tests",
        "hidden": false
      },
      {
        "type": "build",
        "section": "ğŸ”§ Build System",
        "hidden": false
      },
      {
        "type": "ci",
        "section": "ğŸ‘· CI/CD",
        "hidden": false
      },
      {
        "type": "chore",
        "section": "ğŸ”¨ Maintenance",
        "hidden": false
      },
      {
        "type": "breaking",
        "section": "âš ï¸ BREAKING CHANGES",
        "hidden": false
      },
      {
        "type": "security",
        "section": "ğŸ”’ Security",
        "hidden": false
      },
      {
        "type": "deps",
        "section": "ğŸ“¦ Dependencies",
        "hidden": false
      }
    ]
  },

  "release": {
    "draft": false,
    "prerelease": "auto",
    "generateReleaseNotes": true,
    "makeLatest": "auto",
    "discussionCategory": "releases"
  },

  "commits": {
    "conventionalCommits": true,
    "format": {
      "feat": "New feature",
      "fix": "Bug fix",
      "docs": "Documentation",
      "style": "Code style",
      "refactor": "Code refactoring",
      "perf": "Performance improvement",
      "test": "Tests",
      "build": "Build system",
      "ci": "CI/CD",
      "chore": "Maintenance",
      "revert": "Revert changes"
    }
  },

  "automation": {
    "autoTag": true,
    "autoRelease": true,
    "autoChangelog": true,
    "versionBump": {
      "automatic": false,
      "requirePR": true,
      "requireApproval": true
    }
  },

  "validation": {
    "requireTests": true,
    "requireLint": true,
    "requireBuild": true,
    "requireDocs": false,
    "allowSkip": false
  },

  "notifications": {
    "enabled": false,
    "channels": []
  },

  "assets": {
    "include": [
      "dist/**/*",
      "build/**/*",
      "README.md",
      "LICENSE",
      "CHANGELOG.md"
    ],
    "exclude": [
      "**/*.map",
      "**/node_modules/**",
      "**/.DS_Store"
    ]
  },

  "integrations": {
    "npm": {
      "enabled": false,
      "registry": "https://registry.npmjs.org",
      "access": "public"
    },
    "docker": {
      "enabled": false,
      "registry": "docker.io",
      "namespace": ""
    }
  }
}
